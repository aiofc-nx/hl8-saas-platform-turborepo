{
  "name": "hl8-saas-platform-turborepo",
  "private": true,
  "scripts": {
    "add:api": "pnpm add --filter=api",
    "add:main": "pnpm add -w",
    "add:shadcn": "pnpm add --filter=@repo/shadcn",
    "add:utils": "pnpm add --filter=@repo/utils",
    "add:web": "pnpm add --filter=web",
    "build": "turbo build",
    "build:fastify-api": "pnpm build --filter=fastify-api",
    "build:swc": "turbo build:swc",
    "build:web": "pnpm build --filter=web",
    "changeset": "changeset",
    "clean": "turbo clean",
    "clear:modules": "npx npkill",
    "commit": "cz",
    "dev": "turbo dev",
    "dev:api": "pnpm dev --filter=api",
    "dev:fastify": "pnpm --filter fastify-api dev",
    "dev:libs": "turbo dev --filter='@hl8/*'",
    "dev:web": "pnpm dev --filter=web",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "libs:fix": "pnpm dlx sherif@latest --fix",
    "lint": "turbo lint",
    "lint:api": "pnpm lint --filter=api",
    "lint:fastify": "pnpm lint --filter=fastify-api",
    "lint:web": "pnpm lint --filter=web",
    "prepare": "husky",
    "start": "turbo start",
    "start:fastify": "pnpm start --filter=fastify-api",
    "test": "turbo test",
    "test:api": "pnpm test --filter=api",
    "test:cov": "turbo test:cov",
    "test:e2e": "turbo test:e2e",
    "test:fastify": "pnpm test --filter=fastify-api",
    "test:web": "pnpm test --filter=web",
    "type-check": "turbo type-check"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@repo/eslint-config": "workspace:*",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.15.3",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.6",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "ts-jest": "^29.4.5",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=20"
  }
}
