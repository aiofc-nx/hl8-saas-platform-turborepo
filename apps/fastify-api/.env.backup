# ====================================================================
# HL8 SAAS Platform - Fastify API 环境配置
# ====================================================================

# --------------------------------------------------------------------
# 应用配置
# --------------------------------------------------------------------
NODE_ENV=development
PORT=3001

# --------------------------------------------------------------------
# 日志配置
# --------------------------------------------------------------------
LOGGING__LEVEL=info
LOGGING__PRETTY_PRINT=true
LOGGING__ENABLED=true
LOGGING__INCLUDE_ISOLATION_CONTEXT=true
LOGGING__TIMESTAMP=true

# --------------------------------------------------------------------
# 数据库配置 (PostgreSQL) - 使用 DB_ 前缀
# --------------------------------------------------------------------
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=aiofix_platform
DB_USERNAME=aiofix_user
DB_PASSWORD=aiofix_password
DB_DEBUG=true

# 连接池配置
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_IDLE_TIMEOUT_MILLIS=30000
DB_ACQUIRE_TIMEOUT_MILLIS=30000

# --------------------------------------------------------------------
# Redis 配置（缓存）- 匹配 docker-compose.yml
# --------------------------------------------------------------------
CACHING__REDIS__HOST=localhost
CACHING__REDIS__PORT=6379
CACHING__REDIS__DB=0

# 缓存配置
CACHING__TTL=3600
CACHING__KEY_PREFIX=hl8:cache:

# --------------------------------------------------------------------
# Metrics 配置
# --------------------------------------------------------------------
METRICS__PATH=/metrics
METRICS__INCLUDE_TENANT_METRICS=true
METRICS__ENABLE_DEFAULT_METRICS=true
