{
  "extends": "@repo/ts-config/nestjs.json",
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "module": "CommonJS",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"],
      "@/common/*": ["./src/common/*"],
      "@/database/*": ["./src/database/*"],
      "@/features/*": ["./src/features/*"]
    }
  }
}
