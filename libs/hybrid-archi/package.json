{
  "name": "@hl8/hybrid-archi",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./domain/value-objects": {
      "import": "./dist/domain/value-objects/index.js",
      "types": "./dist/domain/value-objects/index.d.ts"
    },
    "./domain": {
      "import": "./dist/domain/index.js",
      "types": "./dist/domain/index.d.ts"
    },
    "./application": {
      "import": "./dist/application/index.js",
      "types": "./dist/application/index.d.ts"
    },
    "./infrastructure": {
      "import": "./dist/infrastructure/index.js",
      "types": "./dist/infrastructure/index.d.ts"
    }
  },
  "description": "HL8 SAAS平台混合架构核心模块 - 为业务模块的开发提供统一的混合架构设计模式，以及提供通用的功能组件",
  "dependencies": {
    "@hl8/database": "workspace:*",
    "@hl8/caching": "workspace:*",
    "@hl8/nestjs-fastify": "workspace:*",
    "@hl8/nestjs-isolation": "workspace:*",
    "@hl8/exceptions": "workspace:*",
    "@hl8/isolation-model": "workspace:*",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.0",
    "tslib": "^2.3.0",
    "uuid": "^9.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:swc": "swc src -d dist --strip-leading-paths && tsc --emitDeclarationOnly --outDir dist -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "dev": "tsc -p tsconfig.build.json --watch",
    "lint": "eslint .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:cov": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.6",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@swc/cli": "^0.7.0",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.37",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.16.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20"
  }
}