{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "emitDeclarationOnly": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "jest.config.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "**/*.test.ts"
  ]
}
