    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.37",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.16.0",
    "@types/uuid": "^9.0.0",
    "@types/pg": "^8.10.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20"
  }
