{
  "name": "@hl8/platform",
  "version": "0.1.0",
  "description": "HL8 平台核心业务逻辑 - 领域模型、值对象、实体（无框架依赖）",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "type-check": "tsc --noEmit",
    "dev": "tsc -p tsconfig.build.json --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint ."
  },
  "dependencies": {},
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/ts-config": "workspace:*",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.37",
    "@types/jest": "^30.2.0",
    "@types/node": "^22.16.0",
    "jest": "^30.2.0",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "hl8",
    "platform",
    "core",
    "domain",
    "ddd",
    "value-object",
    "entity"
  ]
}

